@using System.Text;
<div class="col-lg-12 py-2 mx-auto bg-white box-shadow row">
    <h3 class="h3 text-center my-3 text-primary mx-auto">Нямате избрани интереси. Избери интереси и влез в клуб!</h3>
        <form class="col-lg-12 row mb-5" asp-controller="User" asp-action="AddInterestsToUser" method="post">
            <div class="col-lg-12 row text-center mx-auto">
                @foreach (var item in Model)
                {
                    List<string> tempInterests = new List<string>();
                    foreach (var interest in item.Value)
                    {
                        var result = interest.Value;
                        byte[] bytes = Encoding.Default.GetBytes(result);
                        string resultEncoded = Encoding.UTF8.GetString(bytes, 0, bytes.Length);
                        tempInterests.Add(resultEncoded);
                    }

                    <div class="col-lg-3 row border mx-auto m-1 p-1">
                        <img src="https://mdbootstrap.com/img/Photos/Avatars/img%20(20).jpg" alt="Avatar" class="md-avatar rounded-circle col-3">
                        <div class="custom-control custom-checkbox col-lg-9 pt-1">
                            <input type="checkbox" name="Interests" class="custom-control-input" value="@tempInterests[0]" id="@tempInterests[0]">
                            <label class="custom-control-label" for="@tempInterests[0]">@tempInterests[1]</label>
                        </div>
                    </div>
                }

            </div>
            <div class="mx-auto mt-3">
                <input type="submit" class="btn blue-gradient" value="Виж клубове" />
            </div>
        </form>
</div>