@{
    ViewData["Title"] = "PotentialClubs";
}

    <div class="col-lg-12 border-deep-blue py-2 mx-auto bg-white box-shadow row">
        <h3 class="h3 text-center my-3 text-primary col-lg-12">Клубовете, които може би бихте харесали:</h3>

        @foreach (var club in Model)
        {
            <div class="card card-image w-23rem mx-1 bg-p-center"
                 style="background-image: url(@club.PictureUrl);">
                <div class="text-white d-flex align-items-center rgba-black-strong py-5 px-4">
                    <div>
                        <h5 class="pink-text"><i class="fas fa-chart-pie"></i></h5>
                        <h3 class="card-title pt-2"><strong>@club.Name</strong></h3>
                        <h7 class="">Град: @club.Town</h7>
                        <p class="pt-2">
                            @club.Description.Substring(0, 20)...
                        </p>
                        <div class="col-lg-12 text-center">
                            <a href="/Club/JoinClub/@club.Id"class="btn text-white bg-white blue-gradient btn-outline-white">
                                <i class="fas fa-clone left"></i>
                                Влез в клуб
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>