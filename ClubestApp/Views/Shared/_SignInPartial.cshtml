@model ClubestApp.Models.InputModels.LoginInputModel


<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Вход</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="User" asp-action="Login" method="post">
                <div class="modal-body row">
                    <div class="md-form col-md-11 text-left">
                        <i class="fas fa-envelope prefix grey-text mt-2 ml-3"></i>
                        <input type="email" asp-for="Email" class="form-control validate ml-3rem">
                        <label data-error="" asp-for="Email" data-success="">Имейл</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="md-form col-md-11 text-left">
                        <i class="fas fa-lock prefix grey-text mt-2 ml-3"></i>
                        <input type="password" asp-for="Password" id="defaultForm-pass" class="form-control validate ml-3rem">
                        <label data-error="" asp-for="Password" data-success="">Парола</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn blue-gradient">Вход</button>
                </div>
            </form>
        </div>
    </div>
</div>