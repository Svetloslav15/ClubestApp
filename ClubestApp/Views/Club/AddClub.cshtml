@model ClubestApp.Models.InputModels.AddClubInputModel

    <form class="text-center border border-light p-5 blue-gradient" asp-controller="Club" asp-action="AddClub" method="post">

        <p class="h4 mb-4 text-white mt-2 waves-effect waves-light">Регистрирай клуб</p>

        <p class="text-white mt-2 waves-effect waves-light">Направи свой собствен клуб</p>

        @*<p>
            <a href="" target="_blank">See the last newsletter</a>
        </p>*@

        <!-- Name -->
        <input type="text" asp-for="Name" id="defaultSubscriptionFormPassword" class="form-control mb-4" placeholder="Име">

        <!-- Fee -->
        <input type="number" asp-for="Fee" id="defaultSubscriptionFormEmail" class="form-control mb-4" placeholder="Такса">

        <!-- FeeType -->
        <select asp-for="PriceType" id="defaultSubscriptionFormEmail" class="form-control mb-4">
            <option selected disabled>Вид Такса</option>
            <option value="montly">Месечна</option>
            <option value="perHour">За час</option>
            <option value="free">Безплатно</option>
        </select>

        <!-- IsPublic -->
        <span class="text-white mt-2 waves-effect waves-light" style="display: block">Публичен ли е твоят клуб</span>

        <!-- Default checked -->
        
        <div class="custom-control custom-radio" style="display: inline-block">
            @Html.RadioButtonFor(model => model.IsPublic, "true", new { @checked = "checked", @class = "custom-control-input", @id = "defaultChecked", @Name = "defaultExampleRadios"}) <label class="custom-control-label" for="defaultChecked">Да</label>
        </div>

        <!-- Default unchecked -->
        <div class="custom-control custom-radio mb-1" style="display: inline-block">
            @Html.RadioButtonFor(model => model.IsPublic, "false", new { @class = "custom-control-input", @id = "defaultUnchecked", @Name = "defaultExampleRadios"}) <label class="custom-control-label" for="defaultUnchecked">Не</label>
        </div>

        <!-- Sign in button -->
        <button class="btn btn-info btn-block" type="submit">Регистрирай клуб</button>
    </form>